  <div class="playlist" id="playlist"></div>

  <script>
    // ðŸ”§ AJOUTE ICI TES CHANSONS PERSONNELLES (fichier mp3 dans le mÃªme dossier)
    const tracks = [
      {
        title: "BinÃ´me",
        artist: "Blackghost",
        file: "Music/BINOME.mp3"
      },
    ];

    const playlistContainer = document.getElementById("playlist");

    tracks.forEach((track) => {
      const trackElement = document.createElement("div");
      trackElement.className = "track";

      trackElement.innerHTML = `
        <div class="info">
          <div class="title">${track.title}</div>
          <div class="artist">${track.artist}</div>
        </div>
        <div class="buttons">
          <button onclick="telecharger('${track.file}', '${track.title}.mp3')">TÃ©lÃ©charger</button>
        </div>
      `;

      playlistContainer.appendChild(trackElement);
    });

    function telecharger(fichier, nomFichier) {
      const lien = document.createElement('a');
      lien.href = fichier;
      lien.download = nomFichier;
      document.body.appendChild(lien);
      lien.click();
      document.body.removeChild(lien);
    }
  </script>

